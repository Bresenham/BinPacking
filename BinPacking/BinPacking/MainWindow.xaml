<Window x:Class="BinPacking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinPacking"
        mc:Ignorable="d"
        Title="BinPacking" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="canvas" Width="720" Height="360">
            <Line Height="360" X1="360" X2="360" Y1="0" Y2="360" Stroke="DarkOrange" StrokeThickness="1" StrokeDashArray="1 1"/>
            <Line Height="360" X1="0" X2="0" Y1="0" Y2="360" Stroke="Black" StrokeThickness="1" StrokeDashArray="2 2"/>
            <Line Height="360" X1="720" X2="720" Y1="0" Y2="360" Stroke="Black" StrokeThickness="1" StrokeDashArray="2 2"/>
            <Line Width="720" X1="0" X2="720" Y1="0" Y2="0" Stroke="Black" StrokeThickness="1" StrokeDashArray="2 2"/>
            <Line Width="720" X1="0" X2="720" Y1="360" Y2="360" Stroke="Black" StrokeThickness="1" StrokeDashArray="2 2"/>
        </Canvas>
    </Grid>
</Window>
